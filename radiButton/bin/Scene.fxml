               <font>
                  <Font name="Consolas Bold" size="16.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="rButton3" layoutX="338.0" layoutY="131.0" mnemonicParsing="false" onAction="#getFood" text="Burger" toggleGroup="$food">
